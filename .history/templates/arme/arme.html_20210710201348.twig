{% extends 'base.html.twig' %}

{% block title %}Arme
{% endblock %}
{% block monTitre %} {{Liste des armes
{% endblock %}

{% block body %}
	<table class="table">
		<tr class="thead">
			<th>Image</th>
			<th>Nom</th>
			<th>Déscription</th>
			<th>Dégât</th>
		</tr>
		{% for arme in armes %}
			<tr>
				<td><img src="{{ asset('images/armes/' ~ arme.nom ~ '.png') }}"></td>
				<td><a href="{{ path('afficher_arme', { 'nam' : arme.nom | lower }) }}">{{ arme.nom }}</a></td>
				<td>{{ arme.description }}</td>
				<td>{{ arme.degat }}</td>
			</tr>
		{% endfor %}


	</table>
{% endblock %}
