{% extends 'base.html.twig' %}

{% block title %}Arme
{% endblock %}
{% block monTitre %} Nom de l'arme : {{ armeee.nom }}
{% endblock %}

{% block body %}
	
{% endblock %}

<div class="row">
		<div class="col-2">
			<img src="{{ asset('images/armes/' ~ armeee.nom ~ '.png') }}">
		</div>
		<div class="col">
			<h2>{{ armeee.nom }}</h2>
            <div>
					{% if armeee.sexe %}
						Homme
					{% else %}
						Femme
					{% endif %}</div>
			<h3>Les caractéristiques</h2>
			<ul>
				<li>Age : {{ armeee.age }}</li>
				<li>Force : {{ armeee.carac.force }}</li>
				<li>Agilité : {{ armeee.carac.agil }}</li>
				<li>Intélligence : {{ armeee.carac.intel }}</li>
			</ul>
		</div>
	</div>

{% block body %}
	